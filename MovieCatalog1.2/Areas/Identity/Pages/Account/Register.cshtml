@page
@model RegisterModel

@{
    ViewData["Title"] = "Register";
}

<h1 class="text-center mb-4">@ViewData["Title"]</h1>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="box-container p-4 shadow-lg">
            <section>
                <form id="register" method="post">
                    <h2 class="text-center text-light">Create a new account</h2>
                    <hr class="text-light" />

                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="Enter your email" />
                        <label asp-for="Input.Email" class="form-label text-light">Email</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Create a password" />
                        <label asp-for="Input.Password" class="form-label text-light">Password</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Confirm your password" />
                        <label asp-for="Input.ConfirmPassword" class="form-label text-light">Confirm Password</label>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>

                    <div class="text-center">
                        <button id="register-submit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
                    </div>

                    <div class="text-center mt-3">
                        <p>
                            <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="text-light">Already have an account? Log in here.</a>
                        </p>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    .box-container {
        background-color: rgba(0, 0, 0, 0.7); /* Black with transparency */
        border-radius: 15px; /* Rounded corners */
        color: white; /* White text inside the box */
    }

    .form-floating .form-control {
        background-color: rgba(255, 255, 255, 0.1); /* Slightly transparent input fields */
        border: 1px solid #ccc; /* Light border */
        color: white; /* White text in input fields */
    }

    .form-floating .form-label {
        color: #ddd; /* Light label text color */
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }
</style>
