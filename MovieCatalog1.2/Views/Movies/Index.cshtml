@model IEnumerable<MovieCatalog1._2.Data.Models.Movies>

@{
    ViewData["Title"] = "Movie Catalog";
}

<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Genre</th>
            <th>Year</th>
            <th>Rating</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>@movie.Title</td>
                <td>@movie.Genre</td>
                <td>@movie.Year</td>
                <td>@movie.Rating</td>
                <td>
                    <a class="btn btn-info" href="@Url.Action("Details", "Movies", new { id = movie.Id })">Details</a>
                    <a class="btn btn-warning" href="@Url.Action("Edit", "Movies", new { id = movie.Id })">Edit</a>
                    <a class="btn btn-danger" href="@Url.Action("Delete", "Movies", new { id = movie.Id })">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a class="btn btn-primary" href="@Url.Action("Create", "Movies")">Create New Movie</a>
