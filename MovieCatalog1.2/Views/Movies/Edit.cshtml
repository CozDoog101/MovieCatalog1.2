@model MovieCatalog1._2.Data.Models.Movies

@{
    ViewBag.Title = "Edit Movie";
}

@section Styles {
    <style>
        body {
            background: linear-gradient(135deg, #f06, #48c6ef);
            background-size: cover;
            background-attachment: fixed;
            color: #fff;
            font-family: 'Arial', sans-serif;
        }

        .edit-container {
            background: rgba(0, 0, 0, 0.75);
            padding: 40px;
            border-radius: 15px;
            max-width: 600px;
            margin: 60px auto;
            box-shadow: 0 0 20px rgba(0,0,0,0.6);
        }

        h2 {
            text-align: center;
            margin-bottom: 30px;
            color: #fff;
        }

        .form-group label {
            font-weight: bold;
            margin-top: 15px;
        }

        .form-control {
            border-radius: 10px;
            padding: 10px;
            font-size: 1rem;
        }

        .btn-custom {
            background-color: #ff6600;
            border: none;
            padding: 10px 20px;
            color: white;
            font-weight: bold;
            border-radius: 30px;
            transition: background-color 0.3s ease, transform 0.3s ease;
        }

            .btn-custom:hover {
                background-color: #e65c00;
                transform: scale(1.05);
            }

        .btn-cancel {
            background-color: transparent;
            border: 2px solid #ccc;
            color: #ccc;
            margin-left: 10px;
            border-radius: 30px;
            padding: 10px 20px;
        }

            .btn-cancel:hover {
                background-color: #333;
                color: white;
            }

        .text-danger {
            color: #ff6b6b;
        }
    </style>
}

<div class="edit-container">
    <h2>Edit Movie</h2>

    <form asp-action="Edit">
        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <label asp-for="Title"></label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Genre"></label>
            <input asp-for="Genre" class="form-control" />
            <span asp-validation-for="Genre" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Year"></label>
            <input asp-for="Year" class="form-control" />
            <span asp-validation-for="Year" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Description"></label>
            <textarea asp-for="Description" class="form-control" rows="4"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Rating"></label>
            <input asp-for="Rating" class="form-control" />
            <span asp-validation-for="Rating" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="CoverImage"></label>
            <input asp-for="CoverImage" class="form-control" />
            <span asp-validation-for="CoverImage" class="text-danger"></span>
        </div>

        <div class="form-group mt-4 text-center">
            <button type="submit" class="btn btn-custom">Save Changes</button>
        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-cancel">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
