@model MovieCatalog1._2.Data.Models.Movies

@{
    ViewBag.Title = "Delete Movie";
}

@section Styles {
    <style>
        body {
            background: linear-gradient(135deg, #f06, #48c6ef);
            background-size: cover;
            background-attachment: fixed;
            color: #fff;
            font-family: 'Arial', sans-serif;
        }

        .delete-container {
            background: rgba(0, 0, 0, 0.75);
            padding: 40px;
            border-radius: 15px;
            max-width: 600px;
            margin: 60px auto;
            box-shadow: 0 0 20px rgba(0,0,0,0.6);
            text-align: center;
        }

        h2 {
            color: #ff6b6b;
            margin-bottom: 30px;
        }

        .movie-info {
            margin-bottom: 30px;
        }

            .movie-info img {
                max-width: 200px;
                border-radius: 10px;
                margin-bottom: 20px;
            }

        .btn-danger-custom {
            background-color: #ff4d4d;
            border: none;
            padding: 10px 20px;
            color: white;
            font-weight: bold;
            border-radius: 30px;
            transition: background-color 0.3s ease, transform 0.3s ease;
        }

            .btn-danger-custom:hover {
                background-color: #cc0000;
                transform: scale(1.05);
            }

        .btn-cancel {
            background-color: transparent;
            border: 2px solid #ccc;
            color: #ccc;
            margin-left: 10px;
            border-radius: 30px;
            padding: 10px 20px;
        }

            .btn-cancel:hover {
                background-color: #333;
                color: white;
            }
    </style>
}

<div class="delete-container">
    <h2>Are you sure you want to delete this movie?</h2>

    <div class="movie-info">
        <img src="@Model.CoverImage" alt="@Model.Title" />
        <h3>@Model.Title (@Model.Year)</h3>
        <p><strong>Genre:</strong> @Model.Genre</p>
        <p><strong>Rating:</strong> @Model.Rating</p>
        <p><strong>Description:</strong> @Model.Description</p>
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger-custom">Delete</button>
        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-cancel">Cancel</a>
    </form>
</div>
