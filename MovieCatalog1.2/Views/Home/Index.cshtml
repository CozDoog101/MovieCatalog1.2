@model IEnumerable<MovieCatalog1._2.Data.Models.Movies>

@{
    ViewData["Title"] = "Movie Catalog";
}

<style>
    /* Basic layout styles */
    .header {
        text-align: center;
        margin-bottom: 20px;
    }

        .header h1 {
            font-size: 2rem;
            font-weight: bold;
            color: #333;
        }

    /* Movies container */
    .movies-grid {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-around;
        gap: 20px;
    }

    .movie-card {
        position: relative;
        width: 200px;
        background-color: #fff;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease;
    }

        .movie-card:hover {
            transform: translateY(-10px);
        }

        .movie-card img {
            width: 100%;
            height: 300px;
            object-fit: cover;
        }

    .movie-info {
        padding: 10px;
    }

        .movie-info h5 {
            font-size: 1.2rem;
            font-weight: bold;
            margin: 0;
        }

        .movie-info p {
            margin: 5px 0;
            font-size: 0.9rem;
        }

    /* Description text */
    .description {
        display: none;
        font-size: 0.85rem;
        color: #666;
        padding-top: 10px;
    }

    .movie-card:hover .description {
        display: block;
    }
</style>

<div class="container mt-4">
    <div class="header">
        <h1>Movie Catalog</h1>
    </div>

    <!-- Movies Grid -->
    <div class="movies-grid">
        @foreach (var movie in Model)
        {
            <div class="movie-card">
                <img src="@movie.CoverImage" alt="@movie.Title" />
                <div class="movie-info">
                    <h5>@movie.Title</h5>
                    <p>@movie.Genre</p>
                    <p>@movie.Year</p>
                    <p>Rating: @movie.Rating</p>
                    <div class="description">
                        <p>@movie.Description</p>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Create New Movie Button -->
    <p class="mt-4">
        <a class="btn btn-primary" asp-action="Create">Create New Movie</a>
    </p>
</div>
